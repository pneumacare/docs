openapi: 3.0.0
info:
  title: CareForms API
  version: '1.0.0'
  description: API specification for CareForms application

servers:
  - url: '{baseUrl}'
    variables:
      baseUrl:
        default: http://intentforms.com
        description: Base URL for the API

components:
  securitySchemes:
    BearerAuth:
      type: http
      scheme: bearer
      bearerFormat: JWT

paths:
  /v2/forms:
    post:
      summary: Create Form
      tags: [Forms]
      security:
        - BearerAuth: []
      requestBody:
        required: true
        content:
          application/json:
            schema:
              type: object
              properties:
                name:
                  type: string
                  example: "[ONE] Patient Health Questionnaire-9 (PHQ-9)"
                description:
                  type: string
                  example: "The PHQ-9 is a multipurpose instrument for screening, diagnosing, monitoring and measuring the severity of depression"
                category:
                  type: string
                  example: "general"
                questions:
                  type: array
                  items:
                    type: object
                    properties:
                      id:
                        type: integer
                      text:
                        type: string
                      type:
                        type: string
                        enum: [select_one]
                      hint:
                        type: string
                      symptom:
                        type: string
                      required:
                        type: boolean
                      response:
                        type: array
                        items:
                          type: object
                          properties:
                            id:
                              type: integer
                            value:
                              type: string
                            score:
                              type: integer
                            next_question:
                              type: integer

      responses:
        '200':
          description: Form created successfully
          content:
            application/json:
              schema:
                type: object
                properties:
                  message:
                    type: string
                    example: "Form created"
                  data:
                    type: object
                    properties:
                      id:
                        type: string
                      name:
                        type: string
                      description:
                        type: string
                      category:
                        type: string
                      questions:
                        type: array

    get:
      summary: Get Forms
      tags: [Forms]
      security:
        - BearerAuth: []
      parameters:
        - in: query
          name: mode
          schema:
            type: string
            enum: [sandbox, production]
          required: true
      responses:
        '200':
          description: List of forms retrieved successfully

  /v2/forms/{id}:
    put:
      summary: Edit Form
      tags: [Forms]
      security:
        - BearerAuth: []
      parameters:
        - in: path
          name: id
          required: true
          schema:
            type: string
      requestBody:
        required: true
        content:
          application/json:
            schema:
              type: object
              properties:
                name:
                  type: string
                questions:
                  type: array
                  items:
                    type: object
      responses:
        '200':
          description: Form updated successfully

    delete:
      summary: Delete Form
      tags: [Forms]
      security:
        - BearerAuth: []
      parameters:
        - in: path
          name: id
          required: true
          schema:
            type: string
      responses:
        '200':
          description: Form deleted successfully
          content:
            application/json:
              schema:
                type: object
                properties:
                  message:
                    type: string
                    example: "Form removed"

  /v2/forms/templates:
    get:
      summary: Get Form Templates
      tags: [Forms]
      security:
        - BearerAuth: []
      parameters:
        - in: query
          name: mode
          schema:
            type: string
            enum: [sandbox, production]
          required: true
      responses:
        '200':
          description: Form templates retrieved successfully